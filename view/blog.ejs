<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageUrl %>" alt="" width="700px" />
      <Pre class="mt-3"><%= blog.body %> </Pre>
      <div class="container mt-5">
        <%- include("./partials/dp") %> <%= blog.createdBy.fullName %>
      </div>
    </div>
    <div class="container mt-3">
      <h5>Comments (<%= comments.length %>)</h5>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment"
          />
          <button class="btn btn-sm btn-primary mt-1" type="submit">Add</button>
        </div>
      </form>

      <% } %>
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <div>
          <img
            src="https://i.pinimg.com/736x/0d/64/98/0d64989794b1a4c9d89bff571d3d5842.jpg"
            width="50px"
          />
          <%= comment.createdBy.fullName %>

          <p class="ms-5"><%= comment.content %></p>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
